#
# Add virt_paths
#
use strict;
use libdb;

sub DoUpdate($$$)
{

    if (!DBSlotExists("virt_lans", "ofenabled")) {
        DBQueryFatal("ALTER TABLE virt_lans ADD ".
		     " `ofenabled` tinyint(1) default '0'");
    }
    if (!DBSlotExists("virt_lans", "ofcontroller")) {
        DBQueryFatal("ALTER TABLE virt_lans ADD ".
		     " `ofcontroller` tinytext");
    }
}
1;
