SRCDIR		= @srcdir@
TESTBED_SRCDIR	= @top_srcdir@
OBJDIR		= ../..
SUBDIR		= os/dijkstra

include $(OBJDIR)/Makeconf

CXXFLAGS	= -Wall -O2 -I/usr/local/include -ftemplate-depth-30 -g

all:	dijkstra

include $(TESTBED_SRCDIR)/GNUmakerules

dijkstra:	dijkstra.o bitmath.o bitmath.h Exception.h SingleSource.h IpTree.h dijkstra.h
	$(CXX) $(CXXFLAGS) -static dijkstra.o bitmath.o $(LIBS) -o dijkstra

client-install: dijkstra
	$(INSTALL_PROGRAM) dijkstra $(DESTDIR)$(CLIENT_BINDIR)/dijkstra

clean:
	rm -f *.o dijkstra

