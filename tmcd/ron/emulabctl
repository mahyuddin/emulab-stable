# All rights reserved.
#

#
# Boottime initialization. 
#
case "$1" in
start)
	/usr/local/etc/emulab/watchdog > /dev/null 2>&1 && echo -n ' Emulab'
	;;
stop)
	(killall watchdog; sleep 5) > /dev/null 2>&1 && echo -n ' Emulab'
	;;
*)
	echo "Usage: `basename $0` {start|stop}" >&2
	;;
esac

exit 0
