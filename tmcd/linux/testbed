#!/bin/bash
#
# EMULAB-COPYRIGHT
# Copyright (c) 2000-2002 University of Utah and the Flux Group.
# All rights reserved.
#

#
# testbed       Do some testbed stuff,
#
# description:	Installs deltas (forcing reboot if necessary).
#		On shutdown, it informs the testbed we are rebooting
#		and terminates any lingering daemons.

# Source function library.
. /etc/rc.d/init.d/functions

# Source networking configuration.
if [ ! -f /etc/sysconfig/network ]; then
    exit 0
fi

. /etc/sysconfig/network

# Check that networking is up.
[ ${NETWORKING} = "no" ] && exit 0

RETVAL=0

# See how we were called.
case "$1" in
  start)
	if [ -r /etc/rc.d/testbed/rc.delta ]; then
		echo "Doing Testbed Delta Thing ..."
		/etc/rc.d/testbed/rc.delta
		RETVAL=$?
	fi
	[ $RETVAL -eq 0 ] && touch /var/lock/subsys/testbed
	;;
  stop)
  	rm /var/lock/subsys/testbed
	echo "Shutting down testbed daemons ..."
	killproc trafgen
	killproc program-agent
	killproc slothd
	killproc healthd
	echo "Informing the testbed we're rebooting ..."
	/etc/rc.d/testbed/tmcc state REBOOTING
	RETVAL=$?
	;;
  status)
	echo "Peachy"
	;;
  restart)
	echo "Done"
	;;
  reload)
	echo "Done"
	;;
  *)
	echo "Usage: testbed {start|stop|restart|reload|status}"
	exit 1
esac

exit $RETVAL
