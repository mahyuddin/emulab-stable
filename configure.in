#
# Okay, I know this is improper usage of --with. Too bad.
#
AC_ARG_WITH(TBDBNAME,
[  --with-TBDBNAME=name		Specify TBDB name (tbdb default)],
[
    if test "$withval" = "yes"; then
	AC_MSG_ERROR(Invalid TBDBNAME - Must specify the value)
    fi
    TBDBNAME="$withval"
],[
    TBDBNAME="tbdb"
])
AC_SUBST(TBDBNAME)

