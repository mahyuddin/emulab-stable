SRCDIR		= @srcdir@
TESTBED_SRCDIR	= @top_srcdir@
OBJDIR		= ../..
SUBDIR		= event/linktest

SYSTEM	       := $(shell uname -s)

include $(OBJDIR)/Makeconf

all:	script

include $(TESTBED_SRCDIR)/GNUmakerules

CFLAGS   += -DDEBUG
CFLAGS	 += -O -g -static -Wall
CFLAGS   += -I. -I${OBJDIR} -I$(SRCDIR)/../lib -I$(TESTBED_SRCDIR)/lib/libtb
CFLAGS   += `elvin-config --cflags vin4c`

LDFLAGS  += -static -L../lib -L${OBJDIR}/lib/libtb
LIBS     += -levent -ltb -lcrypto
LIBS     += `elvin-config --libs vin4c`
ifeq ($(SYSTEM),Linux)
LIBS     += -ldl
endif

OBJS	= linktest.o
TESTS	 = linktest

$(TESTS):	$(OBJS) script
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

$(OBJS):	linktest.h ../lib/libevent.a ../lib/event.h

script:	linktest.pl
	chmod 755 linktest.pl

install:

client-install: 
	$(INSTALL_TEST) $(TESTS) \
			$(DESTDIR)$(CLIENT_BINDIR)/$(TESTS)

clean:
	/bin/rm -f *.o $(TESTS)
