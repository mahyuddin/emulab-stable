    if ($hostname eq $synserv) {
	if ($stage_error_count) {
	    my $msg = "  Some tests had errors!";
	    &post_event(EVENT_REPORT,$msg);
	    &sim_event(EVENT_LOG,$msg);
	    &debug("\n$msg\n");
	}
	else {
	    my $msg = "  All tests were successful!";
	    &post_event(EVENT_REPORT,$msg);
	    &sim_event(EVENT_LOG,$msg);
