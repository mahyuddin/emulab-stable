# wait for all procs in the list argument to exit
sub wait_all {
    my (%list_ref) = @_;
    while (scalar(%list_ref)) {
	my $pid = wait();
	if ($? >> 8) {
	    $error_count += 1;
	}
	delete $list_ref{$pid};
    }
}

