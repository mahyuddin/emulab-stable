    $error_count = 0;
    $stage_error_count = 0;
}

sub barrier {
    my $rc;
    
    if ($hostname eq $synserv) {
	return
	    if (! $barr_count);

	$rc = &my_system(PATH_EMULAB_SYNC,"-i",$barr_count,
			 "-n",SYNC_NAMESPACE,
			 "-e",$error_count);
    }
    else {
	$rc = &my_system(PATH_EMULAB_SYNC,"-n",
			 SYNC_NAMESPACE,"-e",$error_count);
    }
    # All peers get error notification.
    if ($rc) {
	$stage_error_count += 1;
    }
}

