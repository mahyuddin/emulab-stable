SRCDIR		= @srcdir@
TESTBED_SRCDIR	= @top_srcdir@
OBJDIR		= ..
SUBDIR		= sensors

include $(OBJDIR)/Makeconf

SUBDIRS	= slothd canaryd

all:	$(SUBDIRS)

include $(TESTBED_SRCDIR)/GNUmakerules

slothd:
	@$(MAKE) -C slothd all

canaryd:
	@$(MAKE) -C canaryd all

install: 
	@$(MAKE) -C slothd install
	@$(MAKE) -C canaryd install

client:
	@$(MAKE) -C slothd client
	@$(MAKE) -C canaryd client

client-install: client
	@$(MAKE) -C slothd client-install
	@$(MAKE) -C canaryd client-install

# mfs: same as client for now
mfs:
	@$(MAKE) -C slothd client
mfs-install: mfs
	@$(MAKE) -C slothd client-install

clean:		subdir-clean

subdir-clean:
	@$(MAKE) -C slothd clean
	@$(MAKE) -C canaryd clean

distclean:	subdir-distclean

subdir-distclean:
	@$(MAKE) -C slothd distclean
	@$(MAKE) -C canaryd distclean

.PHONY:	$(SUBDIRS)
