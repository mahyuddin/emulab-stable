#
sub LockDown($$)
{
    my ($self, $yesno) = @_;

    my $idx = $self->idx();
    my $lockdown = ($yesno ? 1 : 0);

    DBQueryWarn("update experiments set lockdown=$lockdown where idx=$idx")
	or return -1;
    return 0;
}

