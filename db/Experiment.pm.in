#
# Insert a virt_nodes entry, as needed when allocating a node to an
# experiment outside the NS file parsing path. Currently using this
# from the Geni sliver provisioning code.
#
sub InsertVirtNode($$)
{
    my ($self, $node) = @_;

    # Must be a real reference. 
    if (!ref($node)) {
	$node = Node->Lookup($node);
	return -1
	    if (!defined($node));
    }
    my $pid = $self->pid();
    my $eid = $self->eid();
    my $idx = $self->idx();
    my $node_id = $node->node_id();
    my $type    = $node->type();

    DBQueryWarn("replace into virt_nodes set ".
		"  pid='$pid', eid='$eid', exptidx='$idx', ".
		"  vname='$node_id', type='$type', ips='', ".
		"  cmd_line='', startupcmd='', osname=''")
	or return -1;
    
    return 0;
}
sub DeleteVirtNode($$)
{
    my ($self, $node) = @_;

    # Must be a real reference. 
    if (!ref($node)) {
	$node = Node->Lookup($node);
	return -1
	    if (!defined($node));
    }
    my $idx = $self->idx();
    my $node_id = $node->node_id();

    DBQueryWarn("delete from virt_nodes  ".
		"where exptidx='$idx' and vname='$node_id'")
	or return -1;
    
    return 0;
}

