#/usr/bin/perl
use strict;
use warnings; 
use TAP::Harness;
use Data::Dumper;
my %args = (
    verbosity => 1,
    lib     => [ '.', 'lib', 'blib/lib' ],
    );
my $harness = TAP::Harness->new( \%args );

my @default_tests = qw( t/*.t );
my @tests = map { glob($_) } (@ARGV ? @ARGV : @default_tests);
$harness->runtests(@tests);

# vim: ft=perl:
