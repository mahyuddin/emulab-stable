<?xml version="1.0" encoding="utf-8"?>
<ResizeWindow xmlns="pgmap.*" xmlns:mx="http://www.adobe.com/2006/mxml" layout="horizontal"
	title="RSpec Viewer"
	showCloseButton="true"
	borderAlpha=".9" borderColor="#D2E1F0"
	height="400" width="700"
	close="PopUpManager.removePopUp(this)"
	resizable="true">
	
	<mx:Script>
		<![CDATA[
			import mx.events.CloseEvent;
			import mx.managers.PopUpManager; 

			public function loadXml(val:XML):void {
				if(val != null) {
					txt.text = val.toXMLString();
				} else {
					txt.text = "No document found";
				}
			}
			
		]]>
	</mx:Script>
	<mx:TextArea id="txt" width="100%" height="100%"  editable="false" wordWrap="true"/>
	
</ResizeWindow>
