<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:display="protogeni.display.*"
		  xmlns:components="protogeni.display.components.*"
		  gap="0"
		  width="100%"
		  addedToStage="init()"
		  removedFromStage="cleanup()" >
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			// init() is called for the application's applicationComplete event
			public function init():void
			{
				this.stage.addEventListener(FullScreenEvent.FULL_SCREEN, fullScreenChange);
				this.fullScreenChange();
			}
			
			protected function fullScreenChange(event:FullScreenEvent = null):void
			{
				keyboardButton.visible = this.stage.displayState == StageDisplayState.FULL_SCREEN;
			}
			
			[Bindable]
			public var prompt:String;
			
			[Bindable]
			private var text:String;
			
			private var s:KeyboardWindow;
			private function openKeyboard():void {
				var isNew:Boolean = s == null;
				if(isNew)
					s = new KeyboardWindow();
				s.showWindow();
				if(isNew)
					s.setInput(textInput);
			}
			
			private var removeEnter:Boolean = false;
			private var enterFunction:Function;
			public function setEnter(f:Function):void { 
				enterFunction = f;
				this.textInput.addEventListener(FlexEvent.ENTER, enterPressed);
				removeEnter = true;
			}
			
			public function enterPressed(junk:FlexEvent):void {
				enterFunction();
			}
			
			private function cleanup():void {
				this.stage.removeEventListener(FullScreenEvent.FULL_SCREEN, fullScreenChange);
				
				if(removeEnter)
					this.textInput.removeEventListener(FlexEvent.ENTER, enterFunction);
				
				if(s != null) {
					s.closeWindow();
					s = null;
				}
			}
			
			public function get Text():String {
				return textInput.text;
			}
			
			public function set Text(newText:String):void {
				textInput.text = newText;
			}
			
		]]>
	</fx:Script>
	<s:TextInput id="textInput" height="24" width="100%" text="{text}" prompt="{prompt}" />
	<components:ImageButton id="keyboardButton"
		icon="{ImageUtil.keyboardIcon}"
		click="openKeyboard()" visible="false" includeInLayout="{keyboardButton.visible}" />
</s:HGroup>
