<components:DefaultWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:display="protogeni.display.*"
			   xmlns:components="protogeni.display.components.*"
			   title="{Main.version}"
			   contentCreationComplete="init()">
	<components:layout>
		<s:VerticalLayout horizontalAlign="center" />
	</components:layout>
	
	<fx:Script>
		<![CDATA[
			import com.mattism.http.xmlrpc.JSLoader;
			
			import mx.controls.Alert;
			import mx.core.FlexGlobals;
			import mx.managers.PopUpManager;
			
			import protogeni.NetUtil;
			import protogeni.display.ImageUtil;
			
			[Bindable]
			private var memoryString:String;
			
			private var fr:FileReference;
			
			public function init():void
			{
				memoryString =  (System.totalMemoryNumber/1048576).toFixed(2) + " MB";
				
				fr = new FileReference();
				fr.addEventListener(Event.SELECT, onFileSelect);
				fr.addEventListener(Event.COMPLETE, onFileComplete);
				fr.addEventListener(IOErrorEvent.IO_ERROR, onFileIoError);
				fr.addEventListener(SecurityErrorEvent.SECURITY_ERROR, onFileSecurityError);
			}
			
			private var saving:Boolean;
			protected function loadBundle(event:MouseEvent):void
			{
				saving = false;
				fr.browse([new FileFilter("Any file (*.*)", "*.*")])
			}
			
			protected function saveBundle(event:MouseEvent):void
			{
				saving = true;
				fr.save(JSLoader, 'trust_bundle.txt');
			}
			
			public function onFileSelect(event:Event):void {
				if(!saving)
					fr.load();
			}
			
			public function onFileComplete(event:Event):void {
				if(!saving)
				{
					JSLoader.setServerCertificate(fr.data.readUTFBytes(fr.data.length));
				}
			}
			
			private function onFileIoError(event:IOErrorEvent):void {
				Alert.show(event.toString(), "IO Error");
			}
			
			private function onFileSecurityError(event:SecurityErrorEvent):void {
				Alert.show(event.toString(), "Security Error");
			}
			
		]]>
	</fx:Script>
	
	<s:Image useHandCursor="true" buttonMode="true"
			 source="{ImageUtil.logoIcon}"
			 toolTip="Visit our website"
			 click="NetUtil.openWebsite('http://www.protogeni.net');" />
	<s:Label text="Work with ProtoGENI-federated resources" />
	<s:HGroup horizontalAlign="center">
		<s:Button label="Open the manual"
				  icon="{ImageUtil.helpIcon}"
				  click="NetUtil.showManual();"
				  height="24" />
	</s:HGroup>
	
	<mx:TabNavigator width="100%" height="100%" paddingTop="2">
		<s:NavigatorContent label="System" width="100%" height="100%">
			<s:Scroller width="100%" height="100%">
				<s:VGroup width="100%" height="100%"
						  paddingBottom="4" paddingLeft="4" paddingRight="4" paddingTop="4">
					<s:HGroup width="100%">
						<s:Label text="Flash Version" fontWeight="bold" />
						<s:Label text="{Capabilities.version}" />
					</s:HGroup>
					<s:HGroup width="100%">
						<s:Label text="with debug support?" fontWeight="bold" />
						<s:Label text="{Capabilities.isDebugger}" />
					</s:HGroup>
					<s:HGroup width="100%">
						<s:Label text="Memory Used" fontWeight="bold" />
						<s:Label text="{memoryString}" />
					</s:HGroup>
					<s:HGroup width="100%">
						<s:Label text="Running" fontWeight="bold" />
						<s:Label text="{Capabilities.os} on {Capabilities.cpuArchitecture}" />
					</s:HGroup>
					<s:HGroup width="100%">
						<s:Label text="Screen" fontWeight="bold" />
						<s:Label text="{Capabilities.screenResolutionX}x{Capabilities.screenResolutionY} @ {Capabilities.screenDPI} DPI with touchscreen type {Capabilities.touchscreenType}" />
					</s:HGroup>
				</s:VGroup>
			</s:Scroller>
		</s:NavigatorContent>
		<s:NavigatorContent label="Cache" width="100%" height="100%">
			<s:Scroller width="100%" height="100%">
				<s:VGroup width="100%" height="100%" horizontalAlign="center"
						  paddingBottom="4" paddingLeft="4" paddingRight="4" paddingTop="4">
					<s:Button label="Save for offline"
							  click="FlackCache.saveOffline();"
							  height="24" />
					<s:Button label="Delete All"
							  click="FlackCache.clearAll();"
							  height="24" />
					<s:Button label="Delete Offline-Use Data"
							  click="FlackCache.clearOffline();"
							  height="24" />
				</s:VGroup>
			</s:Scroller>
		</s:NavigatorContent>
		<s:NavigatorContent label="Special Thanks" width="100%" height="100%">
			<s:Scroller width="100%" height="100%">
				<s:VGroup width="100%" horizontalAlign="center" gap="2"
						  paddingBottom="4" paddingLeft="4" paddingRight="4" paddingTop="4">
					<mx:LinkButton label="Forge (JavaScript TLS)"
								   toolTip="Copyright (c) 2009-2010 Digital Bazaar, Inc. All rights reserved."
								   height="24">
						<mx:click>navigateToURL(new URLRequest("https://github.com/digitalbazaar/forge"), "_blank");</mx:click>
					</mx:LinkButton>
					<mx:LinkButton label="Fatcow (CCA3 Icons)"
								   height="24">
						<mx:click>navigateToURL(new URLRequest("http://www.fatcow.com/free-icons/index.bml"), "_blank");</mx:click>
					</mx:LinkButton>
					<mx:LinkButton label="Mattism (LGPL XML-RPC)"
								   height="24">
						<mx:click>navigateToURL(new URLRequest("http://sf.net/projects/xmlrpcflash"), "_blank");</mx:click>
					</mx:LinkButton>
					<mx:LinkButton label="Icons Land"
								   height="24">
						<mx:click>navigateToURL(new URLRequest("http://www.icons-land.com/"), "_blank");</mx:click>
					</mx:LinkButton>
				</s:VGroup>
			</s:Scroller>
		</s:NavigatorContent>
		<s:NavigatorContent label="Trust Bundle" width="100%" height="100%">
			<s:VGroup width="100%" height="100%">
				<s:HGroup paddingLeft="4">
					<s:Button icon="{ImageUtil.saveIcon}"
							  label="Save to file"
							  click="saveBundle(event)" />
					<s:Button icon="{ImageUtil.copyIcon}"
							  label="Copy to clipboard"
							  click="System.setClipboard(JSLoader.serverCertificate)" />
					<s:Button icon="{ImageUtil.openIcon}"
							  label="Open trust bundle"
							  click="loadBundle(event)" />
				</s:HGroup>
				<s:TextArea width="100%" height="100%" text="{JSLoader.serverCertificate}" editable="false" />
			</s:VGroup>
		</s:NavigatorContent>
	</mx:TabNavigator>
</components:DefaultWindow>
