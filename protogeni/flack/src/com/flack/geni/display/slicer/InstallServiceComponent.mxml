<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" verticalAlign="middle" xmlns:components="protogeni.display.components.*">
	<fx:Script>
		<![CDATA[
			import protogeni.resources.InstallService;
			
			import spark.components.Group;
			import spark.components.VGroup;
			[Bindable]
			public var url:String = "";
			[Bindable]
			public var fileType:String = "tar.gz";
			[Bindable]
			public var path:String = "/";
			
			public function set Service(value:InstallService):void
			{
				url = value.url;
				fileType = value.fileType;
				path = value.installPath;
			}
			public function get Service():InstallService
			{
				return new InstallService(url, path, fileType);
			}
		]]>
	</fx:Script>
	<s:TextInput id="installUrlText" width="55%" text="@{url}"
				 prompt="Archive URL" />
	<s:Label text="in" />
	<s:TextInput id="installPathText" width="30%" text="@{path}"
				 prompt="Install path" />
	<components:ImageButton icon="{ImageUtil.deleteIcon}"
							click="(parent as Group).removeElement(this)" />
</s:HGroup>
