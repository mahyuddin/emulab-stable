<s:GridItemRenderer
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark">
	
	<fx:Script>
		<![CDATA[
			import com.flack.shared.display.components.DataButton;
			
			override public function prepare(hasBeenRecycled:Boolean):void
			{
				this.removeAllElements();
				if(data && data[column.dataField])
				{
					var newButton:DataButton = DisplayUtil.getButtonFor(data[column.dataField]);
					if(newButton != null)
					{
						newButton.percentWidth = 100;
						newButton.percentHeight = 100;
						addElement(newButton);
					}
				}
			}
		]]>
	</fx:Script>
	
</s:GridItemRenderer>