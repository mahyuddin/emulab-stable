<s:Line xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var lineColor:uint = 0xCCCCCC;
			
			[Bindable]
			public var lineThickness:Number = 2;
			
			[Bindable]
			public var lineAlpha:Number = 0.6;
		]]>
	</fx:Script>
	<s:stroke>
		<s:SolidColorStroke color="{lineColor}" alpha="{lineAlpha}" weight="{lineThickness}" />
	</s:stroke>
</s:Line>
