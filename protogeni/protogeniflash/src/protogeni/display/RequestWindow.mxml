<?xml version="1.0" encoding="utf-8"?>
<display:DefaultWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:display="protogeni.display.*"
		 title="Request Information" width="500" height="300">
	
	<mx:Script>
		<![CDATA[
			import protogeni.ProtogeniHandler;
			import protogeni.communication.Request;
			import protogeni.resources.User;
			
			[Bindable]
			private var request:Request;
			
			public function load(r:Request):void
			{
				request = r;
				urlLabel.text = request.op.getUrl();
				xmlText.text = request.op.getSendXml();
			}
		]]>
	</mx:Script>
	
	<mx:Grid width="100%" height="100%">
		<mx:GridRow width="100%">
			<mx:GridItem>
				<mx:Label text="Name" fontWeight="bold"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:Label text="{request.name}"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%">
			<mx:GridItem>
				<mx:Label text="Details" fontWeight="bold"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:Label text="{request.details}"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%">
			<mx:GridItem>
				<mx:Label text="Url" fontWeight="bold"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:Label id="urlLabel"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem>
				<mx:Label text="XML" fontWeight="bold"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:VBox width="100%" height="100%">
					<mx:Label text="NOTE: May change anytime before called" />
					<mx:TextArea width="100%" height="100%" id="xmlText" />
				</mx:VBox>
			</mx:GridItem>
		</mx:GridRow>
	</mx:Grid>
	
</display:DefaultWindow>
