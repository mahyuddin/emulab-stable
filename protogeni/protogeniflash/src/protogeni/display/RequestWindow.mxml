<?xml version="1.0" encoding="utf-8"?>
<display:DefaultWindow2 xmlns:fx="http://ns.adobe.com/mxml/2009" 
						xmlns:s="library://ns.adobe.com/flex/spark" 
						xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:display="protogeni.display.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import protogeni.GeniHandler;
			import protogeni.communication.Request;
			import protogeni.resources.User;
			
			[Bindable]
			private var request:Request;
			
			public function load(r:Request):void
			{
				request = r;
				urlLabel.text = request.op.getUrl();
				bodyText.text = request.op.getSent();
			}
		]]>
	</fx:Script>
	
	<mx:Grid width="100%">
		<mx:GridRow width="100%">
			<mx:GridItem>
				
			</mx:GridItem>
			<mx:GridItem width="100%">
				<s:Label text="{request.name}" fontSize="17" fontWeight="bold" />
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%">
			<mx:GridItem>
				<s:Label text="Details" fontWeight="bold"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<s:Label text="{request.details}" />
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%">
			<mx:GridItem>
				<s:Label text="URL" fontWeight="bold"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<s:Label id="urlLabel" />
			</mx:GridItem>
		</mx:GridRow>
	</mx:Grid>
	<s:Label text="Body (may change before called)" fontWeight="bold" />
	<s:TextArea width="100%" height="100%" id="bodyText" editable="false" />
</display:DefaultWindow2>
