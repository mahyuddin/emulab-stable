<?xml version="1.0" encoding="utf-8"?>
<display:DefaultWindow2 xmlns:fx="http://ns.adobe.com/mxml/2009" 
						xmlns:s="library://ns.adobe.com/flex/spark" 
						xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:display="protogeni.display.*"
						width="400" height="300"
						title="User Information" close="closeWindow()">
	<display:layout>
		<s:VerticalLayout/>
	</display:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			import protogeni.GeniEvent;
			import protogeni.GeniHandler;
			import protogeni.resources.Slice;
			import protogeni.resources.User;
			
			[Bindable]
			private var user:User;
			
			public function load(u:User):void
			{
				user = u;
				refresh();
				Main.geniHandler.addEventListener(GeniEvent.USER_CHANGED, refresh);
				Main.geniHandler.addEventListener(GeniEvent.SLICE_CHANGED, refresh);
				Main.geniHandler.addEventListener(GeniEvent.SLICES_CHANGED, refresh);
			}
			
			public function refresh(junk:* = null):void
			{
				credentialBasicImage.source = DisplayUtil.assignIcon(user.credential != null && user.credential.length > 0);
				credentialKeysImage.source = DisplayUtil.assignIcon(user.keys != null && user.keys.length > 0);
				slices.removeAllElements()
				for each(var s:Slice in user.slices)
				slices.addElement(DisplayUtil.getSliceButton(s));
				if(sslCert != null)
					this.sslCert.text = user.sslCertificate;
				if(sslKey != null)
					this.sslKey.text = user.sslPrivateKey;
			}
			
			public function save():void
			{
				user.sslCertificate = this.sslCert.text;
				user.sslPrivateKey = this.sslKey.text;
				Main.Application().saveLocalData();
			}
		]]>
	</fx:Script>
	<mx:TabNavigator width="100%" height="100%" paddingLeft="5" paddingRight="5" paddingBottom="5" paddingTop="5">
		<mx:Grid label="Basic" width="100%" height="100%" id="infoGrid" horizontalScrollPolicy="off" verticalScrollPolicy="off">
			<mx:GridRow width="100%">
				<mx:GridItem>
					<s:Label text="Name" fontWeight="bold"/>
				</mx:GridItem>
				<mx:GridItem width="100%">
					<s:Label text="{user.name}" />
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%">
				<mx:GridItem>
					<s:Label text="Authority" fontWeight="bold"/>
				</mx:GridItem>
				<mx:GridItem width="100%">
					<s:Label text="{user.authority.Name}" />
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%">
				<mx:GridItem>
					<s:Label text="Credentials" fontWeight="bold"/>
				</mx:GridItem>
				<mx:GridItem width="100%">
					<s:Label text="Basic"/>
					<mx:Image width="16" height="16" id="credentialBasicImage"/>
					<s:Group>
						<display:DefaultLine percentHeight="90" />
					</s:Group>
					<s:Label text="Keys"/>
					<mx:Image width="16" height="16" id="credentialKeysImage"/>
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%">
				<mx:GridItem>
					<s:Label text="Uid" fontWeight="bold"/>
				</mx:GridItem>
				<mx:GridItem width="100%">
					<s:Label text="{user.uid}"/>
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%">
				<mx:GridItem>
					<s:Label text="Uuid" fontWeight="bold"/>
				</mx:GridItem>
				<mx:GridItem width="100%">
					<s:Label text="{user.uuid}"/>
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%">
				<mx:GridItem>
					<s:Label text="Hrn" fontWeight="bold"/>
				</mx:GridItem>
				<mx:GridItem width="100%">
					<s:Label text="{user.hrn}"/>
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%">
				<mx:GridItem>
					<s:Label text="Email" fontWeight="bold"/>
				</mx:GridItem>
				<mx:GridItem width="100%">
					<s:Label text="{user.email}"/>
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%">
				<mx:GridItem>
					<s:Label text="Urn" fontWeight="bold"/>
				</mx:GridItem>
				<mx:GridItem width="100%">
					<s:Label text="{user.urn}"/>
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%">
				<mx:GridItem>
					<s:Label text="Slices" fontWeight="bold"/>
				</mx:GridItem>
				<mx:GridItem width="100%">
					<s:Scroller width="100%" height="100%">
						<s:VGroup width="100%" height="100%" id="slices" />
					</s:Scroller>
				</mx:GridItem>
			</mx:GridRow>
		</mx:Grid>
		<s:NavigatorContent height="100%" width="100%" label="SSL">
			<s:VGroup height="100%" width="100%">
				<s:Label text="Certificate" />
				<s:TextArea id="sslCert" text="{user.sslCertificate}" width="100%" height="50%" />
				<s:Label text="Private Key" />
				<s:TextArea id="sslKey" text="{user.sslPrivateKey}" width="100%" height="50%" />
			</s:VGroup>
		</s:NavigatorContent>
	</mx:TabNavigator>
	<display:controlBarContent>
		<s:Button label="OK" click="save(); closeWindow();" />
		<s:Button label="Cancel" click="refresh(); closeWindow();" />
	</display:controlBarContent>
</display:DefaultWindow2>
