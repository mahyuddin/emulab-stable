<?xml version="1.0" encoding="utf-8"?>
<display:DefaultWindow2 xmlns:fx="http://ns.adobe.com/mxml/2009" 
						xmlns:s="library://ns.adobe.com/flex/spark" 
						xmlns:mx="library://ns.adobe.com/flex/mx"
						xmlns:display="protogeni.display.*"
						title="Initial User Settings" close="closeWindow()"
						defaultButton="{okButton}" initialize="authorities.selectedItem = Main.geniHandler.CurrentUser.authority">
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			import mx.core.IFlexDisplayObject;
			import mx.managers.PopUpManager;
			
			public function save():void
			{
				Main.geniHandler.CurrentUser.authority = authorities.selectedItem;
				Main.geniHandler.CurrentUser.sslCertificate = sslCert.text;
				Main.geniHandler.CurrentUser.sslPrivateKey = sslKey.text;
				Main.geniHandler.rpcHandler.startAuthenticatedInitiationSequence();
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Label text="Which authority are you registered with?" />
	<s:DropDownList id="authorities" dataProvider="{Main.geniHandler.GeniAuthorities}" labelField="Name"  width="100%"/>
	<s:Label text="Certificate" />
	<s:TextArea id="sslCert" width="100%" height="50%" />
	<s:Label text="Private Key" />
	<s:TextArea id="sslKey" width="100%" height="50%" />
	<display:controlBarContent>
		<s:Button id="okButton" label="OK" click="save(); closeWindow();" />
		<s:Button label="Cancel" click="closeWindow()" />
	</display:controlBarContent>
</display:DefaultWindow2>
