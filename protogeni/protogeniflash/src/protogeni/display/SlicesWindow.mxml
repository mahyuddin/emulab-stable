<?xml version="1.0" encoding="utf-8"?>
<display:ResizeWindow
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:protogeniflash="protogeniflash.*"
	borderAlpha=".9" borderColor="#D2E1F0"
	showCloseButton="true"
	title="Slices"
	close="PopUpManager.removePopUp(this)"
	layout="vertical" width="272" height="226" xmlns:display="protogeni.display.*">
	
	<mx:Script>
		<![CDATA[
			import protogeni.resources.Slice;
			import mx.events.CloseEvent;
			import mx.managers.PopUpManager; 
			
			public function createSlice():void
			{
				//Main.protogeniHandler.rpcHandler.startSlice(sliceName.text);
			}
			
			public function refreshView():void
			{
				this.removeAllChildren();
				for each(var s:Slice in Main.protogeniHandler.CurrentUser.slices)
				{
					var b:Button = DisplayUtil.getSliceButton(s);
					b.percentWidth = 100;
					this.addChild(b);
				}
			}
			
		]]>
	</mx:Script>
	
	<mx:ControlBar>
		<mx:TextInput id="sliceName" width="100%"/>
		<mx:Button label="Create" click="createSlice();"/>
	</mx:ControlBar>
	
</display:ResizeWindow>
