SRCDIR		= @srcdir@
TESTBED_SRCDIR	= @top_srcdir@
OBJDIR		= ../..
SUBDIR		= lib/libtb

include $(OBJDIR)/Makeconf

all:	libtb.a

client:	libtb-nodb.a
	mv libtb-nodb.a libtb.a

include $(TESTBED_SRCDIR)/GNUmakerules

SYSTEM	:= $(shell uname -s)

OBJS		= log.o tbdefs.o
CFLAGS	       += -O -g -Wall -I${OBJDIR} -I/usr/local/include

libtb.a:	$(OBJS) tbdb.o
	$(AR) crv $@ $(OBJS) tbdb.o
	$(RANLIB) $@

libtb-nodb.a:	$(OBJS)
	$(AR) crv $@ $(OBJS)
	$(RANLIB) $@

log.o:		log.h
tbdb.o:		tbdb.h log.h tbdefs.h
tbdefs.o:	tbdefs.h

install:

clean:
	/bin/rm -f *.o *.a
