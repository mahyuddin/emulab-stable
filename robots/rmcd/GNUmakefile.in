SRCDIR		= @srcdir@
TESTBED_SRCDIR	= @top_srcdir@
OBJDIR		= ../..
SUBDIR		= robots/rmcd

include $(OBJDIR)/Makeconf

PROGS = rmcd
TESTS = test_rmcd.sh

all: $(PROGS)

include $(TESTBED_SRCDIR)/GNUmakerules

CFLAGS	       += -O -g -Wall -I${OBJDIR} -I/usr/local/include
CFLAGS	       += -I${SRCDIR}/../mtp
CFLAGS	       += -I${SRCDIR}/../../lib/libtb

LDFLAGS		= -L../mtp -L${OBJDIR}/lib/libtb

LIBS	 += -lmtp -ltb

test_rmcd.sh: rmcd

rmcd: rmcd.o ../mtp/libmtp.a
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ rmcd.o $(LIBS)

install: all
	-mkdir -p $(INSTALL_DIR)/opsdir/sbin
	$(INSTALL_PROGRAM) rmcd $(INSTALL_DIR)/opsdir/sbin/rmcd

clean:
	rm -f *.o
