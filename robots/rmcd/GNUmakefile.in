SRCDIR		= @srcdir@
TESTBED_SRCDIR	= @top_srcdir@
OBJDIR		= ../..
SUBDIR		= robots/rmcd

include $(OBJDIR)/Makeconf

PROGS = rmcd
TESTS = test_rmcd.sh test_rmcd2.sh

all: $(PROGS)
client client-install:

include $(TESTBED_SRCDIR)/GNUmakerules

CFLAGS	       += -O -g -Wall -I${OBJDIR} -I/usr/local/include
CFLAGS	       += -I${SRCDIR}/../mtp -I../mtp
CFLAGS	       += -I${SRCDIR}/../../lib/libtb

LDFLAGS		= -L../mtp -L${OBJDIR}/lib/libtb

LIBS	 += -lmtp -ltb -lm

test_rmcd.sh: rmcd

OBJS = rclip.o obstacles.o pilotConnection.o rmcd.o

rmcd: $(OBJS) ../mtp/libmtp.a
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

install: all
	-mkdir -p $(INSTALL_DIR)/opsdir/sbin
	$(INSTALL_PROGRAM) rmcd $(INSTALL_DIR)/opsdir/sbin/rmcd

clean:
	rm -f *.o
