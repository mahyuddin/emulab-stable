#!/usr/local/bin/python
# -*- python -*-

import sys
sys.path.append("@prefix@/lib")
import getopt
import libplab

def usage(me):
    print "Usage: %s [ -vd ] { create | destroy } pid eid" % me
    sys.exit(-1)

def main(args):
    me = args[0]
    try:
        command, pid, eid = libplab.handleArgs(args[1:])
    except getopt.GetoptError:
        usage(me)
    except ValueError:
        usage(me)

    plab = libplab.Plab()
    if command == "create":
        slice = plab.createSlice(pid, eid)
    elif command == "destroy":
        slice = plab.loadSlice(pid, eid)
        slice.destroy()
    else:
        usage(me)

if __name__ == "__main__":
    main(sys.argv)
