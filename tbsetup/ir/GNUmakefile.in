SRCDIR		= @srcdir@
TESTBED_SRCDIR	= @top_srcdir@
OBJDIR		= ../..
SUBDIR		= tbsetup/ir

include $(OBJDIR)/Makeconf

LIB_STUFF	= libir.tcl libir.pm
LIBEXEC_STUFF   = assign_wrapper handle_os handle_ip postassign

#
# Force dependencies on the scripts so that they will be rerun through
# configure if the .in file is changed.
# 
all: $(LIB_STUFF) $(LIBEXEC_STUFF)

include $(TESTBED_SRCDIR)/GNUmakerules

install: $(addprefix $(INSTALL_LIBDIR)/ir/, $(LIB_STUFF)) \
	 $(addprefix $(INSTALL_LIBEXECDIR)/ir/, $(LIBEXEC_STUFF))

$(INSTALL_LIBDIR)/ir/%: %
	@echo "Installing $<"
	-mkdir -p $(INSTALL_LIBDIR)/ir
	$(INSTALL) $< $@

$(INSTALL_LIBEXECDIR)/ir/%: %
	@echo "Installing $<"
	-mkdir -p $(INSTALL_LIBEXECDIR)/ir
	$(INSTALL) $< $@

clean:

