SRCDIR		= @srcdir@
TESTBED_SRCDIR	= @top_srcdir@
OBJDIR		= ../../..
SUBDIR		= tbsetup/ipassign/src
UNIFIED         = @UNIFIED_BOSS_AND_OPS@

include $(OBJDIR)/Makeconf

CXXFLAGS	+= -I/usr/local/include/metis 

LDFLAGS		+= -L/usr/local/lib

LIBEXEC_STUFF	= ipassign

IPASSIGN_OBJECTS = bitmath.o ipassign.o Assigner.o ConservativeAssigner.o \
                   Framework.o HostRouter.o NumberAssigner.o Router.o 

IPASSIGN_HEADERS = Exception.h lib.h Assigner.h ConservativeAssigner.h \
                   Framework.h HostRouter.h NumberAssigner.h Router.h \
                   bitmath.h

#
# Force dependencies on the scripts so that they will be rerun through
# configure if the .in file is changed.
# 
all:	$(LIBEXEC_STUFF)

include $(TESTBED_SRCDIR)/GNUmakerules

install: all libexec-install

#
# Automate this part at some point.
# 
libexec-install:	 $(addprefix $(INSTALL_LIBEXECDIR)/, $(LIBEXEC_STUFF))

ipassign: $(IPASSIGN_OBJECTS) $(IPASSIGN_HEADERS)
	$(CXX) $(CXXFLAGS) $(LDFLAGS) $(IPASSIGN_OBJECTS) -lm -lmetis -o ipassign

$(IPASSIGN_OBJECTS): $(IPASSIGN_HEADERS)

post-install: 
	chmod 775 $(INSTALL_LIBEXECDIR)

clean:
	rm -f bitmath.o ipassign.o Assigner.o ConservativeAssigner.o \
              Framework.o HostRouter.o NumberAssigner.o Router.o ipassign

distclean:





